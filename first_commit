# include <stdio.h>
    int main ( ) {
    int m ,h,i=1,a,j,b=1;
    printf(" Enter the number of the year 2024 ");
    scanf("%d",&m);
    switch(m){
        
        case 1://january
        a=2;
        j=31;
        break;
        case 2://february
        a=5;
        j=29;
        break;
        case 3://march 
        a=6;
        j=31;
        break ;
        case 4://april
        a=2;
        j=30;
        break ;
        case 5://may
        a=4;
        j=31;
        break;
        case 6://june
        a=7;
        j=30;
        break ;
        case 7: //july
        a=2;
        j=31;
        break ;
        case 8://august
        a=5;
        j=31;
        break;
        case 9://september
        a=1;
        j=30;
        break ;
        case 10://october
        a=3;
        j=31;
        break ;
        case 11://november
        a=6;
        j=30;
        break ;
        case 12 ://december
        a=1;
        j=31;
        break;
        default :
        printf("\n invalid month \n ");
    }
        printf("\n\n");
        printf(" \t\t\t  Month - %d - 2024 \n\n",m);
        printf ("         SUN     MON     TUE    WED     THU     FRI     SAT   \n \n ");
        
        switch(a)
        {
            
            case 1 : 
            printf (" \t %d",i);
            break ;
            case 2 : 
            printf (" \t\t %d",i);
            break ;
            case 3 : 
            printf (" \t\t\t %d",i);
            break ;
            case 4 : 
            printf (" \t\t\t\t %d",i);
            break ;
            case 5 : 
            printf (" \t\t\t\t\t %d",i);
            break ;
            case 6 : 
            printf (" \t\t\t\t\t\t %d",i);
            break ;
            case 7 : 
            printf (" \t\t\t\t\t\t\t %d",i);
            break ;
        }
         h=8-a;
         for(i=2;i<=h;i++)
         {
             printf("\t%d",i);
         }
         printf("\n");
         for(i=h+1;i<=j;i++)
         {
             if(b==8){
                 printf("\n");
                 b=1;
             }
             printf("\t %d",i);
             b++;
         }

    return 0;
}
